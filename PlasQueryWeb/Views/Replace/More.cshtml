@{
    var all = (ViewBag.allData) as System.Data.DataTable;
}
<style type="text/css">
    .panding td {
        padding:5px;
    }
</style>
<link href="~/Content/layui/css/layui.css" rel="stylesheet" />
<div c style="margin:40px;" class="search-content-box">
    <div class="search-content" >
            <table >
                <thead>
                    <tr style="height:35px; line-height:35px;">
                        <th width="25%">分类</th>
                        <th width="25%">属性</th>
                        <th width="25%">相似度值</th>
                        <th width="25%"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < all.Rows.Count; i++)
                    {
                        <tr style="height:35px; line-height:35px;">
                            <th width="25%" style="padding:0px 5px;">@(all.Rows[i]["Attribute1"].ToString())</th>
                            <th width="25%" style="padding:0px 5px;">@(all.Rows[i]["Attribute2"].ToString())</th>
                            <th width="25%" style="padding:0px 5px;"><div class="layui-progress layui-progress-big" lay-showpercent="true"><div class="layui-progress-bar" lay-percent="@(all.Rows[i]["AttributeRight"].ToString())%" style="width:@(all.Rows[i]["AttributeRight"].ToString())%;"><span class="layui-progress-text">@(decimal.Round(decimal.Parse(all.Rows[i]["AttributeRight"].ToString()),2))%</span></div></div></th>
                            <th width="25%" style="padding:0px 5px;"><div class="layui-progress layui-progress-big" lay-showpercent="true"><div class="layui-progress-bar" lay-percent="@(all.Rows[i]["AttributeValueResult"].ToString())%" style="width:@(all.Rows[i]["AttributeValueResult"].ToString())%;"><span class="layui-progress-text">@(decimal.Round(decimal.Parse(all.Rows[i]["AttributeValueResult"].ToString()), 2))%</span></div></div></th>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
</div>

