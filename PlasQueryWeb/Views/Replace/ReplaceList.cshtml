                <li> <!--<a class="btn btn-orange btn-sm">用户自定义权重</a>--><button class="layui-btn layui-btn-sm" onclick="window.location.href='/Replace/Index?Rpt=@ViewBag.ProGuid'">自定义权重</button></li>
            </ul>
        </div>

    </div>
    <div class="search-item">
        <div class="search-item-type">生产厂商：</div>
        <div class="search-item-content" style="height: auto;">
            <ul>
                <li class="active">全部</li>
                @for (var i = 0; i < company.Rows.Count; i++)
                {
                    <li data-guid="@company.Rows[i]["SmallGuid"].ToString()" data-value="@company.Rows[i]["Name"].ToString()">@company.Rows[i]["Name"].ToString()</li>
                }
            </ul>
        </div>
