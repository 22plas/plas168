
@{
    ViewBag.Title = "新增报价";
    Layout = "~/Views/Shared/MemberCenterShared.cshtml";
}

<div class="tpl-content-wrapper">
    <div class="tpl-content-page-title">
        我要报价
    </div>
    <ol class="am-breadcrumb">
        <li><a href="#" class="am-icon-home">首页</a></li>
        <li>报价系统</li>
        <li class="am-active">新增报价</li>
    </ol>
    <div class="tpl-portlet-components">
        <div class="portlet-title">
            <div class="caption font-green bold">
                <span class="am-icon-code"></span> 新增报价
            </div>
            <div class="tpl-portlet-input tpl-fz-ml">
                <div class="portlet-input input-small input-inline">
                    <div class="input-icon right">
                        <i class="am-icon-search"></i>
                        <input type="text" class="form-control form-control-solid" placeholder="报价编号">
                    </div>
                </div>
            </div>
        </div>
        <div class="tpl-block">

            <div class="am-g">
                <div class="tpl-form-body tpl-form-line">
                    <table width="100%" border="1">
                        <tr>
                            <td width="50%" align="center">客户公司资料</td>
                        </tr>
                        <tr>
                            <td>
                                <form class="am-form tpl-form-line-form">
                                    <div class="am-form-group">
                                        <label for="user-name" class="am-u-sm-3 am-form-label">公司名字</label>
                                        <div class="am-u-sm-9">
                                            <input type="text" class="tpl-form-input" id="user-name" placeholder="">
                                        </div>
                                    </div>

                                    <div class="am-form-group">
                                        <label for="user-email" class="am-u-sm-3 am-form-label">联系电话 <span class="tpl-form-line-small-title"></span></label>
                                        <div class="am-u-sm-9">
                                            <input type="text" class="tpl-form-input" id="user-name" placeholder="">
                                        </div>

                                    </div>

                                    <div class="am-form-group">
                                        <label for="user-phone" class="am-u-sm-3 am-form-label">联系人</label>
                                        <div class="am-u-sm-9">
                                            <input type="text" class="tpl-form-input" id="user-name" placeholder="">
                                        </div>

                                        <br>
                                        <table width="200" border="0">
                                            <tr>
                                                <td>
                                                    <div class="am-u-sm-9">
                                                        <select data-am-selected="{searchBox: 1}">
                                                            <option value="a">请选择省</option>

                                                        </select>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="am-u-sm-9">
                                                        <select data-am-selected="{searchBox: 1}">
                                                            <option value="a">请选择市</option>

                                                        </select>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="am-u-sm-9">
                                                        <select data-am-selected="{searchBox: 1}">
                                                            <option value="a">请选择区</option>

                                                        </select>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>


                                        <label for="user-phone" class="am-u-sm-3 am-form-label"></label>
                                        <div class="am-u-sm-9">
                                            <input type="text" class="tpl-form-input" id="user-name" placeholder="详细地址">
                                        </div>
                                        <div class="am-form-group">

                                        </div>

                                        <label for="user-phone" class="am-u-sm-3 am-form-label">电子邮件</label>
                                        <div class="am-u-sm-9">
                                            <input type="text" class="tpl-form-input" id="user-name" placeholder="">
                                        </div>

                                        <label for="user-phone" class="am-u-sm-3 am-form-label">QQ</label>
                                        <div class="am-u-sm-9">
                                            <input type="text" class="tpl-form-input" id="user-name" placeholder="">
                                        </div>
                                </form>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="am-form-group" style="justify-content:center;width:40%;margin:0 auto;">
                    <button type="button" class="am-btn am-btn-danger am-btn-sm"><i class="am-icon-cloud-upload"></i> 保存</button>
                    <button type="button" class="am-btn am-btn-danger am-btn-sm" style="margin-left:30px;">
                        <a href="/MemberCenter/SellerOffer" style="color:#ffffff;">返回</a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
