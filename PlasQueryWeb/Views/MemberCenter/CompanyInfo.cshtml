@model IEnumerable<PlasModel.cp_Company>
@{
    ViewBag.Title = "公司资料";
    Layout = "~/Views/Shared/MemberCenterShared.cshtml";
}
<style type="text/css">
    .am-selected-btn {
        border-top: none;
        border-left: none;
        border-right: none;
        border-radius: 0;
        font-size: 14px;
        padding: 10px 8px;
    }

        .am-selected-btn.am-btn-default {
            border-radius: 0;
        }

        .am-selected-btn .am-icon-caret-down {
            color: #888;
        }
</style>
<div class="tpl-content-wrapper">
    <div class="tpl-content-wrapper-bg">
        <ol class="am-breadcrumb">
            <li><a href="#" class="am-icon-home">首页</a></li>
            <li>会员中心</li>
            <li class="am-active">公司资料</li>
        </ol>
        <div class="tpl-portlet-components">
            <div class="portlet-title">
                <div class="caption"><span class="am-icon-fax" style="margin-right: 3px;"></span>已保存的公司资料</div>
                <div class="addcaption" style="margin-left:15px;"><a href="/MemberCenter/CompanyInfoCreate"><span class="am-icon-plus"></span> 新增</a></div>
                <div class="tpl-portlet-input tpl-fz-ml">
                    <div class="portlet-input input-small input-inline">
                        <div class="input-icon right">
                            <i class="am-icon-search"></i>
                            <input type="text" class="form-control form-control-solid" placeholder="搜索...">
                        </div>
                    </div>
                </div>


            </div>
            <div class="tpl-block">
                <div class="am-g">
                    <div class="am-u-sm-12 am-u-md-3"></div>
                </div>
                <div class="am-g">
                    <div class="am-u-sm-12">
                        <form class="am-form">
                            <table class="am-table am-table-striped am-table-hover table-main">
                                <thead>
                                    <tr>
                                        @*<th style="width: 15px;" class="table-check"><input type="checkbox" class="tpl-table-fz-check"></th>*@
                                        <th style="width: 80px;" class="table-id">名称</th>
                                        <th style="width: 50px;" class="table-title">联系人</th>
                                        <th style="width: 100px;" class="table-author am-hide-sm-only">手机号</th>
                                        <th style="width: 80px;" class="table-date am-hide-sm-only"> 邮箱</th>
                                        <th style="width: 80px;" class="table-date am-hide-sm-only"> 座机号</th>
                                        <th style="width: 80px;" class="table-date am-hide-sm-only"> 微信号</th>
                                        <th style="width: 120px;" class="table-date am-hide-sm-only"> 地址</th>
                                        <th style="width: 50px;" class="table-date am-hide-sm-only"> 开户行</th>
                                        <th style="width: 100px;" class="table-date am-hide-sm-only"> 账号</th>
                                        <th style="width: 100px;" class="table-date am-hide-sm-only"> 开户地址</th>
                                        <th style="width: 120px;" class="table-set">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td><input type="checkbox"></td>*@
                                            <td><a href="#" title="">@item.Name</a></td>
                                            <td class="am-hide-sm-only">@item.Contacts</td>
                                            <td class="am-hide-sm-only">@item.Mobile</td>
                                            <td class="am-hide-sm-only">@item.Email</td>
                                            <td class="am-hide-sm-only">@item.Tel</td>
                                            <td class="am-hide-sm-only">@item.WeChat</td>
                                            <td>@item.Province@item.City@item.Area@item.Address</td>
                                            <td class="am-hide-sm-only" title="@item.OpenBank" style="cursor:default;">@item.OpenBank</td>
                                            <td class="am-hide-sm-only" style="cursor:default;">@item.AccountOpenBank</td>
                                            <td class="am-hide-sm-only" style="cursor:default;">@item.AccountOpening</td>
                                            <td>
                                                <a href="/MemberCenter/CompanyInfoEdit/@item.Id" class="am-text-success" style="display: inline-block;margin-right:6px;">
                                                    <span class="am-icon-pencil-square-o"></span>编辑
                                                </a>
                                                @*                                            @Html.ActionLink("编辑", "CompanyInfoEdit", new { id = item.Id })*@
                                                <a href="#" id="@item.Id" onclick="deleteitem(this)" class="am-text-danger" style="display: inline-block;"><span class="am-icon-trash-o"></span>删除</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="am-cf">

                                <div class="am-fr">
                                    <ul class="am-pagination tpl-pagination">
                                        <li class="am-disabled"><a href="#">«</a></li>
                                        @for (int i = 1; i <= ViewBag.pagetotal; i++)
                                        {
                                            if (i == 1)
                                            {
                                                <li class="am-active"><a href="#">@i</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="#">@i</a></li>
                                            }
                                        }
                                        @*<li class="am-active"><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#">4</a></li>
                                        <li><a href="#">5</a></li>*@
                                        <li><a href="#">»</a></li>
                                    </ul>
                                </div>
                            </div>
                            <hr>

                        </form>
                    </div>

                </div>
            </div>
            <div class="tpl-alert"></div>
        </div>
    </div>
</div>
<script src="~/Content/js/jquery-2.1.1.js"></script>
<script src="~/Content/js/Area.js"></script>
<script src="~/Content/js/business/CompanyInfo.js"></script>
<script src="~/Scripts/comm.js" type="text/javascript"></script>
<script src="~/Content/layui/lay/modules/layer.js" type="text/javascript"></script>


